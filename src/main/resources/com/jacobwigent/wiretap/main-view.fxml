<?xml version="1.0" encoding="UTF-8"?>

<?import com.jacobwigent.wiretap.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jacobwigent.wiretap.Controller">
  <MenuBar prefHeight="25.0" prefWidth="2152.0">
    <Menu mnemonicParsing="false" text="File">
      <MenuItem mnemonicParsing="false" text="Close" />
    </Menu>
    <Menu mnemonicParsing="false" text="Edit">
      <MenuItem mnemonicParsing="false" text="Delete" />
    </Menu>
    <Menu mnemonicParsing="false" text="Help">
      <MenuItem mnemonicParsing="false" text="About" />
    </Menu>
  </MenuBar>

  <SplitPane dividerPositions="0.1" VBox.vgrow="ALWAYS">
    <!-- Left Panel -->
    <AnchorPane>
      <children>
        <VBox spacing="5.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
          <ComboBox fx:id="portComboBox" maxWidth="1.7976931348623157E308" minWidth="-Infinity" onAction="#onConnectionOptionsChange" promptText="Select Serial Port" />
          <ComboBox fx:id="baudComboBox" maxWidth="1.7976931348623157E308" onAction="#onConnectionOptionsChange" promptText="Baud Rate" />
          <Button fx:id="connectButton" disable="true" maxWidth="1.7976931348623157E308" onAction="#onConnectClick" text="Connect" />
          <Label fx:id="connectionUpdateLabel" wrapText="true" />
           <Pane prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
           <Label fx:id="serialStatistics" text="Info" />
           <padding>
              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
           </padding>
        </VBox>
      </children>
    </AnchorPane>
    <!-- Right Panel with Tabs -->
    <TabPane tabClosingPolicy="UNAVAILABLE" tabMaxHeight="50.0" tabMaxWidth="50.0">
      <Tab text="Monitor">
        <AnchorPane>
          <children>
            <VBox spacing="5.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
              <children>
                <!-- This HBox will take the height of its children -->
                <HBox alignment="CENTER" spacing="5.0" HBox.hgrow="ALWAYS">
                  <children>
                    <Label fx:id="connectionStatusLabel" text="Connected" />
                    <Pane HBox.hgrow="ALWAYS" /> <!-- Flexible spacer -->
                    <Button mnemonicParsing="false" onAction="#clearMonitor" text="Clear" />
                  </children>
                           <VBox.margin>
                              <Insets left="5.0" right="5.0" top="5.0" />
                           </VBox.margin>
                </HBox>


                <!-- This SerialMonitor (textarea) will grow to fill the remaining vertical space -->
                <SerialMonitor fx:id="serialMonitor" editable="false" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
                  <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                  </padding>
                </SerialMonitor>
              </children>
            </VBox>
          </children>
        </AnchorPane>
      </Tab>
      <Tab text="Plotter">
        <AnchorPane>
               <children>
                  <LineChart>
                    <xAxis>
                      <CategoryAxis side="BOTTOM" />
                    </xAxis>
                    <yAxis>
                      <NumberAxis side="LEFT" />
                    </yAxis>
                  </LineChart>
               </children>
        </AnchorPane>
      </Tab>
    </TabPane>
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
  </SplitPane>
</VBox>
